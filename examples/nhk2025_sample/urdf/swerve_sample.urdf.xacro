<?xml version="1.0"?>
<robot name="swerve_robot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- ==================== -->
  <!-- Parameters           -->
  <!-- ==================== -->
  <xacro:property name="wheel_radius" value="0.05"/>
  <xacro:property name="wheel_width"  value="0.02"/>

  <!-- ==================== -->
  <!-- Base link             -->
  <!-- ==================== -->
  <link name="base_link"/>

  <!-- ==================== -->
  <!-- Wheel module macro    -->
  <!-- ==================== -->
  <xacro:macro name="swerve" params="steer_name wheel_name x y">

    <!-- steer link -->
    <link name="${steer_name}_link" />

    <!-- steer joint -->
    <joint name="${steer_name}" type="continuous">
      <parent link="base_link"/>
      <child link="${steer_name}_link"/>
      <origin xyz="${x} ${y} 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    <!-- wheel link -->
    <link name="${wheel_name}_link">
      <visual>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <origin rpy="1.5708 0 0"/>
        <material name="black">
          <color rgba="0.1 0.1 0.1 1.0"/>
        </material>
      </visual>
    </link>

    <!-- drive joint -->
    <joint name="${wheel_name}" type="continuous">
      <parent link="${steer_name}_link"/>
      <child link="${wheel_name}_link"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
    </joint>

  </xacro:macro>

  <!-- ==================== -->
  <!-- Wheel instances       -->
  <!-- ==================== -->
  <xacro:swerve steer_name="swerve_steer_0" wheel_name="swerve_wheel_0" x="0.45"  y="0.45"/>
  <xacro:swerve steer_name="swerve_steer_1" wheel_name="swerve_wheel_1" x="-0.45" y="0.45"/>
  <xacro:swerve steer_name="swerve_steer_2" wheel_name="swerve_wheel_2" x="-0.45" y="-0.45"/>
  <xacro:swerve steer_name="swerve_steer_3" wheel_name="swerve_wheel_3" x="0.45"  y="-0.45"/>

  <!-- ==================== -->
  <!-- Lidar Front          -->
  <!-- ==================== -->
  <link name="lidar_front_link"/>
  <joint name="base_to_lidar_front" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_front_link"/>
    <origin xyz="0.4 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ==================== -->
  <!-- Lidar Rear           -->
  <!-- ==================== -->
  <link name="lidar_rear_link"/>
  <joint name="base_to_lidar_rear" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_rear_link"/>
    <origin xyz="-0.4 0 0" rpy="0 0 1.5708"/> <!-- rpy = 0 0 pi/2 -->
  </joint>
</robot>